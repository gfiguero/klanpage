{% extends '::base.html.twig' %}
{% use '::navbar.html.twig' %}
{% use '::sidebar.html.twig' %}
{% use '::icons.html.twig' %}

{% set translation_domain = 'KlanPageBundle' %}
{% trans_default_domain translation_domain %}

{% block title %}{{ 'testing.title.index'|trans }}{% endblock %}

{% block body %}
    <div id="page-wrapper">
        <div class="row" id="page-header">
            <div class="col-lg-12">
                <h1 class="page-header">{% block icons %}{{ parent() }}{% endblock %}{{ 'testing.title.index'|trans }}</h1>
                {% include '::flashbag.html.twig' with { 'translation_domain': translation_domain } %}
            </div>
        </div>
        <!-- /#page-header -->

        <div class="row" id="page-toolbar">
            <div class="col-lg-12">
                <div class="btn-toolbar">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalNew">{{ icon('plus') }}&nbsp;{{ 'testing.new.link'|trans }}</button>
                </div>
            </div>
        </div>
        <!-- /#page-toolbar -->

        <div class="row" id="page-list">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">{{ 'testing.list.title'|trans }}</h2>
                    </div>
                    <div class="table-responsive">
                        <table class="records_list table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'testing.form.actions'|trans }}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.id'|trans, 'id') }}{% if sort == 'id' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_string'|trans, 'a_string') }}{% if sort == 'a_string' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_integer'|trans, 'a_integer') }}{% if sort == 'a_integer' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_boolean'|trans, 'a_boolean') }}{% if sort == 'a_boolean' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_decimal'|trans, 'a_decimal') }}{% if sort == 'a_decimal' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_float'|trans, 'a_float') }}{% if sort == 'a_float' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_date'|trans, 'a_date') }}{% if sort == 'a_date' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_time'|trans, 'a_time') }}{% if sort == 'a_time' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_datetime'|trans, 'a_datetime') }}{% if sort == 'a_datetime' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_text'|trans, 'a_text') }}{% if sort == 'a_text' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.a_file'|trans, 'a_file') }}{% if sort == 'a_file' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.createdAt'|trans, 'createdAt') }}{% if sort == 'createdAt' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                    <th>{{ knp_pagination_sortable(testings, 'testing.form.updatedAt'|trans, 'updatedAt') }}{% if sort == 'updatedAt' %}{% if direction == 'desc' %}{{ icon('caret-down') }}{% else %}{{ icon('caret-up') }}{% endif %}{% endif %}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for key, testing in testings %}
                                <tr>
                                    <td>
                                        <div class="btn-toolbar">
                                            <div class="btn-group" role="group">
                                                <a type="button" class="btn btn-warning" href="{{ path('testing_show', { 'id': testing.id }) }}" aria-label="{{ 'testing.show.link'|trans }}">{{ icon('search') }}</a>
                                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEdit{{ testing.id }}">{{ icon('edit') }}</button>
                                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalDelete{{ testing.id }}">{{ icon('trash') }}</button>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{% if testing.id %}{{ testing.id }}{% endif %}</td>
                                    <td>{% if testing.astring %}{{ testing.astring }}{% endif %}</td>
                                    <td>{% if testing.ainteger %}{{ testing.ainteger }}{% endif %}</td>
                                    <td>{% if testing.aboolean %}{{ 'Si' }}{% else %}{{ 'No' }}{% endif %}</td>
                                    <td>{% if testing.adecimal %}{{ testing.adecimal }}{% endif %}</td>
                                    <td>{% if testing.afloat %}{{ testing.afloat }}{% endif %}</td>
                                    <td>{% if testing.adate %}{{ testing.adate|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd-LLL-Y") }}{% endif %}</td>
                                    <td>{% if testing.atime %}{{ testing.atime|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "HH:mm") }}{% endif %}</td>
                                    <td>{% if testing.adatetime %}{{ testing.adatetime|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd-LLL-Y - HH:mm") }}{% endif %}</td>
                                    <td>{% if testing.atext %}{{ testing.atext }}{% endif %}</td>
                                    <td>{% if testing.afile %}{{ testing.afile }}{% endif %}</td>
                                    <td>{% if testing.createdAt %}{{ testing.createdAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd-LLL-Y - HH:mm") }}{% endif %}</td>
                                    <td>{% if testing.updatedAt %}{{ testing.updatedAt|localizeddate('full', 'full', 'es_ES', 'America/Santiago', "dd-LLL-Y - HH:mm") }}{% endif %}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="text-center">
                            {{ knp_pagination_render(testings) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-list -->

        <div id="page-modal">
            <div class="modal fade" id="modalNew" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'testing.new.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_start(newForm, { 'style': 'horizontal' }) }}
                                        {{ form_widget(newForm) }}
                                        <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                                            <button type="submit" class="btn btn-primary">{{ icon('check fa-fw') }}&nbsp;{{ 'testing.new.submit'|trans }}</button>
                                        </div></div>
                                    {{ form_end(newForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {% for key, testing in testings %}
            <div class="modal fade" id="modalEdit{{ testing.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'testing.edit.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {% set editForm = attribute(editForms, key) %}
                                    {{ form_start(editForm, { 'style': 'horizontal' }) }}
                                        {{ form_widget(editForm) }}
                                        <div class="form-group"><div class="col-lg-offset-4 col-lg-8">
                                            <button type="submit" class="btn btn-primary">{{ icon('check fa-fw') }}&nbsp;{{ 'testing.edit.submit'|trans }}</button>
                                        </div></div>
                                    {{ form_end(editForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="modalDelete{{ testing.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">{{ icon('times') }}</button>
                            <h4 class="modal-title" id="myModalLabel">{{ 'testing.delete.title'|trans }}</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-xs-2 text-center">{{ icon('exclamation-triangle fa-5x') }}</div>
                                <div class="col-xs-10"><p>{{ 'testing.delete.message'|trans }}</p></div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            {% set deleteForm = attribute(deleteForms, key) %}
                            {{ form_start(deleteForm) }}
                                {{ form_widget(deleteForm) }}
                                <button type="submit" class="btn btn-danger pull-right">{{ icon('trash') }}&nbsp;{{ 'testing.delete.submit'|trans }}</button>
                            {{ form_end(deleteForm) }}
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <!-- /#page-modal -->

    </div>
    <!-- /#page-wrapper -->

{% endblock %}
